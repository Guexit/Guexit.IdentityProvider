@page
@using Microsoft.Extensions.Localization
@model Guexit.IdentityProvider.WebApi.Pages.Account.Logout.LoggedOut
@inject IStringLocalizer<Guexit.IdentityProvider.WebApi.Pages.Account.Logout.LoggedOut> Localizer

<div class="logged-out-page">
    <h1>
        @Localizer["Sayonara"] <br>
        <small>@Localizer["LoggedOutMessage"]</small>
    </h1>

    @if (Model.View.PostLogoutRedirectUri != null)
    {
        <div>
            @Localizer["ClickHere"] <a class="PostLogoutRedirectUri" href="@Model.View.PostLogoutRedirectUri">@Localizer["Here"]</a> @Localizer["ToReturnToThe"]
            <span>@Model.View.ClientName</span> @Localizer["Application"].
        </div>
    }

    @if (Model.View.SignOutIframeUrl != null)
    {
        <iframe width="0" height="0" class="signout" src="@Model.View.SignOutIframeUrl"></iframe>
    }
</div>

@section scripts
{
    @if (Model.View.AutomaticRedirectAfterSignOut)
    {
        <script src="~/js/signout-redirect.js"></script>
    }
}